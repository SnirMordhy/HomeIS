@model IEnumerable<HomeIS.Models.Apartment>
@{
    if (!Request.IsAuthenticated)
    {
        Response.Redirect("/");
    }
}

@{
        ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PropertyValue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <h5>City: <small>@Html.DisplayFor(modelItem => item.Location.City)</small></h5>
                <h5>Neighborhood: <small>@Html.DisplayFor(modelItem => item.Location.Neighborhood)</small></h5>
                <h5>Address: <small>@Html.DisplayFor(modelItem => item.Location.Address)</small></h5>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PropertyValue)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
