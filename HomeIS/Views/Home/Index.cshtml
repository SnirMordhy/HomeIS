@{
    ViewBag.Title = "Home Page";
}

<header>
    <div class="page-header">
        <h1>HomeIS <small>Your Next Home in Israel</small></h1>
    </div>
</header>

<div class="row" id="apartment-grid">
 
</div>

<div id="apartment-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="apartment-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="thumbnail modal-thumbnail">
                        <div id="apartment-photos-carousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#apartment-photos-carousel" data-slide-to="0" class="active"></li>
                                <li data-target="#apartment-photos-carousel" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                            </div>
                            <!-- Controls -->
                            <a class="left carousel-control" href="#apartment-photos-carousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#apartment-photos-carousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="caption modal-caption">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
